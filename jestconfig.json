{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom" : [
    "src/**/*.ts",
    "!src/database/*/*.ts"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "moduleDirectories": [
    "<rootDir>",
    "node_modules"
  ]
}
